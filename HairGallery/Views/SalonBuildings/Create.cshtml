@model HairGallery.Models.SalonBuilding

@{
    ViewBag.Title = "Create";
}

<h3>Add Salon</h3>
@using (Html.BeginForm("Create", "SalonBuildings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <th style="width:100px">@Html.LabelFor(model => model.SalonName)</th>
                    <td>
                        @Html.EditorFor(model => model.SalonName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SalonName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.Address)</th>
                    <td>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.BuildingDescription)</th>
                    <td>
                        @Html.TextAreaFor(model => model.BuildingDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BuildingDescription, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.BuildingPic)</th>
                    <td>
                        <input type="file" class="form-control" id="photoUpload" name="photoUpload" required="required" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="photoUpload" data-valmsg-replace="true"></span>
                    </td>
                </tr>
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-danger" href="@Url.Action("Index","SalonBuildings")">
                    <i class="fa fa-angle-left"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
    }
