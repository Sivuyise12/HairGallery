@model HairGallery.Models.Hairstyle

@{
    ViewBag.Title = "Create";
}

<h2>Hairstyle</h2>

@using (Html.BeginForm("Create", "Hairstyles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SalonBuildingId, "SalonBuildingId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SalonBuildingId", null, "-- Select Salon --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SalonBuildingId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ServiceTypeId, "ServiceTypeId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ServiceTypeId", null, "-- Select Service Type --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ServiceTypeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HairstyleName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HairstyleName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HairstyleName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HairstyleDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HairstyleDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HairstyleDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HairstylePicture, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" class="form-control" id="photoUpload" name="photoUpload" required="required" />
            <span class="field-validation-valid text-danger" data-valmsg-for="photoUpload" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HairstylePrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HairstylePrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HairstylePrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
            <a class="btn btn-danger" href="@Url.Action("Index","Hairstyles")">
                <i class="fa fa-angle-left"></i>
                Back to List
            </a>
        </div>
    </div>
</div>
}
